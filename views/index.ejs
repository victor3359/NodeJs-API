<script type="text/javascript">
    var data = [];
    function state(name, flag){
        if(flag) {
            document.getElementById(name).innerHTML = 'On';
        }else{
            document.getElementById(name).innerHTML = 'Off';
        }
    }
    function setText(name, value) {
        document.getElementById(name).innerHTML = value;
    }
    function Init402() {
        var url = "http://localhost:8080/r402a";
        var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function () {
            if(this.readyState == 4 && this.status == 200){
                var json = JSON.parse(xhttp.responseText);
                for(var i=4999;i>=0;i--) {
                    data.push({
                        hok402_w: parseFloat(json[i]['kW_tot'])*1000,
                        date: json[i]['datetime']
                    });
                }
                setInterval(newdata, 1000);
                AmCharts.makeChart("chartdiv",
                    {
                        "type": "serial",
                        "categoryField": "date",
                        "dataDateFormat": "YYYY-MM-DD HH:NN:SS",
                        "categoryAxis": {
                            "minPeriod": "ss",
                            "parseDates": true
                        },
                        "chartCursor": {
                            "enabled": true,
                            "categoryBalloonDateFormat": "JJ:NN:SS"
                        },
                        "chartScrollbar": {
                            "enabled": true
                        },
                        "trendLines": [],
                        "graphs": [
                            {
                                "bullet": "round",
                                "id": "AmGraph-1",
                                "title": "W",
                                "valueField": "hok402_w"
                            }
                        ],
                        "guides": [],
                        "valueAxes": [
                            {
                                "id": "ValueAxis-1",
                                "title": "Power"
                            }
                        ],
                        "allLabels": [],
                        "balloon": {},
                        "legend": {
                            "enabled": true,
                            "useGraphSettings": true
                        },
                        "titles": [
                            {
                                "id": "Hok_402",
                                "size": 15,
                                "text": "Hok_402"
                            }
                        ],
                        "dataProvider": data
                    }
                );
            }
        }
        xhttp.open("GET", url, true);
        xhttp.send(null);
    }
    function newdata() {
        var url = "http://localhost:8080/r402";
        var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                // Typical action to be performed when the document is ready:
                var json = JSON.parse(xhttp.responseText);
                if(json[0]['wc_light_status']){
                    state("wc_ls", 1);
                }else{
                    state("wc_ls", 0);
                }
                if(json[0]['wc_switch_status']){
                    state("wc_ss", 1);
                }else{
                    state("wc_ss", 0);
                }
                if(json[0]['windows_light_status']){
                    state("wd_ls", 1);
                }else{
                    state("wd_ls", 0);
                }
                if(json[0]['windows_switch_status']){
                    state("wd_ss", 1);
                }else{
                    state("wd_ss", 0);
                }
                if(json[0]['Room_lights_switch_status']){
                    state("rm_ss", 1);
                }else{
                    state("rm_ss", 0);
                }
                if(json[0]['BedLeft_lights_switch_status']){
                    state("bd_ss", 1);
                }else{
                    state("bd_ss", 0);
                }
                if(json[0]['BedLeft_lights_C1']){
                    state("bd_c1", 1);
                }else{
                    state("bd_c1", 0);
                }
                if(json[0]['BedLeft_lights_C2']){
                    state("bd_c2", 1);
                }else{
                    state("bd_c2", 0);
                }
                if(json[0]['LeftSituation_switch_status']){
                    state("ss_l", 1);
                }else {
                    state("ss_l", 0);
                }
                if(json[0]['RightSituation_switch_status']){
                    state("ss_r", 1);
                }else{
                    state("ss_r", 0);
                }
                if(json[0]['EnergySaving_switch_status']){
                    state("ess_ss", 1);
                }else{
                    state("ess_ss", 0);
                }
                setText("avg_v", json[0]['V_avg']);
                setText("avg_i", json[0]['I_avg']);
                setText("rm_c1", (json[0]['Room_lights_C1'] / 3000) * 100+ " %");
                setText("rm_c2", (json[0]['Room_lights_C1'] / 3000) * 100+ " %");
                setText("rm_c3", (json[0]['Room_lights_C1'] / 3000) * 100+ " %");
                setText("bd_c1", (json[0]['BedLeft_lights_C1'] / 3000) * 100+ " %");
                setText("bd_c2", (json[0]['BedRight_lights_C1'] / 3000) * 100+ " %");

                data.push({
                    hok402_w: parseFloat(json[0]['kW_tot']) * 1000,
                    date: json[0]['datetime']
                });
            }
        };
        xhttp.open("GET", url, true);
        xhttp.send(null);
    }
    function update() {
        AmCharts.makeChart("chartdiv",
            {
                "type": "serial",
                "categoryField": "date",
                "dataDateFormat": "YYYY-MM-DD HH:NN:SS",
                "categoryAxis": {
                    "minPeriod": "ss",
                    "parseDates": true
                },
                "chartCursor": {
                    "enabled": true,
                    "categoryBalloonDateFormat": "JJ:NN:SS"
                },
                "chartScrollbar": {
                    "enabled": true
                },
                "trendLines": [],
                "graphs": [
                    {
                        "bullet": "round",
                        "id": "AmGraph-1",
                        "title": "W",
                        "valueField": "hok402_w"
                    }
                ],
                "guides": [],
                "valueAxes": [
                    {
                        "id": "ValueAxis-1",
                        "title": "Power"
                    }
                ],
                "allLabels": [],
                "balloon": {},
                "legend": {
                    "enabled": true,
                    "useGraphSettings": true
                },
                "titles": [
                    {
                        "id": "Hok_402",
                        "size": 15,
                        "text": "Hok_402"
                    }
                ],
                "dataProvider": data
            }
        );
    }

    Init402();
    setInterval(update, 10000);
</script>
